{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "types": [
    "mocha",
    "node"
  ],
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "/node_modules/"
  ]
}
